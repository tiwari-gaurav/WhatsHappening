<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/banner_margin"
            android:layout_marginLeft="@dimen/banner_margin"
            android:layout_toRightOf="@+id/news_image"
            android:layout_toLeftOf="@+id/textViewOptions"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_below="@+id/news_image"
            android:textColor="@color/colorGreyLight"
            android:layout_toLeftOf="@+id/textViewOptions"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textColor="@color/fb_color"
            android:layout_below="@+id/description"
            android:layout_toLeftOf="@+id/textViewOptions"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/banner_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            />

    </RelativeLayout>




</LinearLayout>